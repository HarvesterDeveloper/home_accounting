<Page x:Class="HomeAccounting_Client.Assets.Pages.Page_Reports"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HomeAccounting_Client.Assets.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="480"
      Title="Page_Reports">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel x:Name="DockPanel_Main">
            <StackPanel>
                <StackPanel Margin="10,15,20,10" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Предыдущий месяц" Width="192" Click="ButtonClick_PreviousMonth"/>
                    <Button Content="Следующий месяц" Margin="5,0,0,0" Width="192" Click="ButtonClick_NextMonth"/>
                </StackPanel>
                <StackPanel>
                    <TextBox x:Name="TextBox_Report" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Width="auto" Height="360" IsReadOnly="True" Margin="8,0,8,0"/>
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
