<Window x:Class="HomeAccounting_Client.Window_Captcha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeAccounting_Client"
        mc:Ignorable="d"
        Title="Капча" Height="128" Width="350"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel x:Name="StackPanel_Main" Orientation="Vertical" Style="{DynamicResource ResourceKey=BackgroundGreenGradient}">
            <TextBlock x:Name="Label_Captcha" FontSize="28" Style="{DynamicResource ResourceKey=WhiteText}" FontStyle="Italic" FontWeight="Heavy" Text="Captcha" Width="350" TextAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Width="269">
                <TextBox x:Name="TextBox_Income" Width="128" Margin="0,10,0,0" TabIndex="1"/>
                <Button DockPanel.Dock="Right" Content="Enter Captcha" Width="128" Margin="10,10,10,0" TabIndex="3" Click="ButtonClick_CheckCaptcha"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
